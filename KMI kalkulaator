using System;

public class KMI
{   
    // funktsioon mis arvutab kmi valja
    public static double Mykmi(double height, double weight)
    {   
        // kui sisestatakse ebarealistlik kaal voi pikkus siis vistatakse valja
        if (weight <= 0 || height <= 0)
        {
            Console.WriteLine("Enter valid weight/height");
            return 0;
        }
        // arvutatakse kmi ja antakse info inimese kohta kas ta on alakaalus, tavaline, rasvund voi paks
        else
        {
            double kmi = weight / (height * height);
            string health = "";

            if (kmi < 18.5) {
                health = "underweight";
                    }
            else if (kmi < 25) {
                health = "normal";
            }
            else if (kmi < 30) {
                health = "overweight";
            }
            else {
                health = "obese";

                }
         // prindib konsoolis valja kmi ja olek ning tagastab kmi
            Console.WriteLine($"your KMI is {kmi:F2} you are {health}");
            return kmi;

        }
        }
    public static void Main()
    {
        Mykmi(1.93, 93);
    }
}
