<Window x:Class="LIHAPOOD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lihapood" Height="550" Width="900" Background="#FF688CAF">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Otsi:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0" 
                     TextChanged="SearchBox"/>

        </StackPanel>


        <!-- koik nupud (Lisa uus, muuda, kustuta , sorteeri hinna järgi) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Lisa uus" Click="AddButton" Margin="5" Padding="16" 
                    Background="#FF34555E" Foreground="White" FontWeight="Bold" FontSize="11"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand"></Button>
            
            <Button Content="Muuda" Click="EditButton" Margin="5" Padding="16" 
                    Background="#FF34555E" Foreground="White" FontWeight="Bold" FontSize="11"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand"></Button>
            
            <Button Content="Kustuta" Click="DeleteButton" Margin="5" Padding="16" 
                    Background="#FF34555E" Foreground="White" FontWeight="Bold" FontSize="11"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand"></Button>
            
            <Button Content="Sorteeri hinna järgi" Click="SortByPrice" Margin="5" Padding="16" 
                    Background="#FF34555E" Foreground="White" FontWeight="Bold" FontSize="11"
                    BorderBrush="Black" BorderThickness="2" Cursor="Hand"> </Button>
            
        </StackPanel>

        <!-- Valja toodud read kus on kirjas tooted ja nende informatsioon. -->
        <DataGrid x:Name="MeatDataGrid" Grid.Row="2" AutoGenerateColumns="False" 
          CanUserAddRows="False" SelectionMode="Single" Background="#FF34555E"
          SelectionChanged="MeatDataGrid_SelectionChanged"
          RowBackground="#FFECF0F1" AlternatingRowBackground="#FFD5DBDB"
          FontSize="12" Foreground="#2C3E50"
          HeadersVisibility="Column" IsReadOnly="True">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF2C3E50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,6"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF1ABC9C"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nimi" Binding="{Binding Name}" Width="120"/>
                <DataGridTextColumn Header="Hind/kg" Binding="{Binding Pricekg}" Width="80"/>
                <DataGridTextColumn Header="Asukoht" Binding="{Binding Location}" Width="120"/>
                <DataGridTextColumn Header="Värskus kuni" Binding="{Binding FreshUntil, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Liik" Binding="{Binding Type}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>


        <TextBlock Grid.Row="3" x:Name="StatusText" Margin="0,10,0,0"/>
    </Grid>
</Window>